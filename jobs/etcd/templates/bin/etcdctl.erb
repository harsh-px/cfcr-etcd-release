#!/bin/bash

source /var/vcap/jobs/etcd/bin/utils.sh

if [[ "${LOCAL}" == "true" ]]; then
  etcd_endpoints="${etcd_endpoint_address}"
fi

if [[ "${ETCDCTL_API}" == "3" ]]; then
  /var/vcap/packages/etcd/bin/etcdctl \
    --endpoints "${etcd_endpoints}" \
    "$@"
else
  /var/vcap/packages/etcd/bin/etcdctl \
    --endpoints "${etcd_endpoints}" \
    "$@"
fi
